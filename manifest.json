{
  "manifest_version": 3,
  "name": "DSA GPT Assistant",
  "version": "1.0",
  "description": "Get AI hints for DSA problems using GPT",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": [
    "https://api.openai.com/*"
  ]
}
